                <input type="text" placeholder="Enter email" name="email" id="">
                <input type="text" placeholder="Enter subject" name="subject" id="">
                <input type="text" placeholder="Enter message" name="message" id="">
                <button type="submit">Send the message</button>
            </form>
        </div>
    </div>
</body>
</html>